</controllerActivity>

<batteryIndicator name="batteryIndicator">
<pos>0.955 0.0125</pos>
<size>0.033 0.033</size>
<incharge>./ARTES/BATTERY/incharge.svg</incharge>
<full>./ARTES/BATTERY/full.svg</full>
