</subset>


<!---------------------------------------------------------------------->
<!-------------------- LISTA DE JOGOS / GAMELIST ----------------------->
<!---------------------------------------------------------------------->


<include name="basic">./basic.xml</include>
<include name="grid">./grid.xml</include>
<include name="detailed">./detailed.xml</include>
<include name="gamecarousel">./gamecarousel.xml</include>
<include name="video">./video.xml</include>
<include name="Gamelist CRAFTGAMES - PSX Horizontal Console CD">./Gamelist-PSX-CONSOLE-CD.xml</include>
<include name="Gamelist Full Artes">./Gamelist-FULL-ARTES.xml</include>
  
  </theme>
