<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="detailed">
<formatVersion>7</formatVersion>

<!---------------------------------------------------------------------->
<!------------------------------- SCREEN ------------------------------->
<!---------------------------------------------------------------------->

<view name="screen">

<text name="clock">
<fontSize>0.034</fontSize>
<color>ffffff</color>
<glowColor>000000</glowColor>
<pos>0.89 0.9545</pos>
<size>0.10 0.058</size>
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<verticalAlignment>right</verticalAlignment>
</text>
	
<controllerActivity name="controllerActivity">
<pos>0.01 0.010</pos>
<size>0.085 0.025</size>
<itemSpacing>0.003</itemSpacing>
<imagePath>./icons/gamepad.svg</imagePath>
<color>FFFFFF1A</color>
<activityColor>ff00001A</activityColor>
<hotkeyColor>ffffff1A</hotkeyColor>
</controllerActivity>

<batteryIndicator name="batteryIndicator">
<pos>0.955 0.0125</pos>
<size>0.033 0.033</size>
<incharge>./battery/incharge.svg</incharge>
<full>./battery/full.svg</full>
<at75>./battery/75.svg</at75>
<at50>./battery/50.svg</at50>
<at25>./battery/25.svg</at25>
<empty>./battery/empty.svg</empty>
<color>FFFFFFA0</color>
</batteryIndicator>
<batteryIndicator name="batteryIndicator" tinyScreen="true">
<pos>0.915 0.013</pos>
<size>0.07 0.07</size>
</batteryIndicator>
</view>

