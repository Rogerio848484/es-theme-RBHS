<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="gamecarousel">
<formatVersion>7</formatVersion>
 		
<!---------------------------------------------------------------------->
<!------------------------------- SCREEN ------------------------------->
<!---------------------------------------------------------------------->

<view name="screen">
<text name="clock">
		<fontSize>0.034</fontSize>
		<color>ffffff</color>
		<glowColor>000000</glowColor>
		<pos>0.89 0.9545</pos>
		<size>0.10 0.058</size>
		<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
		<verticalAlignment>right</verticalAlignment>
		</text>
	
     <controllerActivity name="controllerActivity">
      <pos>0.01 0.010</pos>
      <size>0.085 0.025</size>
      <itemSpacing>0.003</itemSpacing>
      <imagePath>./icons/gamepad.svg</imagePath>
      <color>FFFFFF1A</color>
      <activityColor>ff00001A</activityColor>
      <hotkeyColor>ffffff1A</hotkeyColor>
    </controllerActivity>

    <batteryIndicator name="batteryIndicator">
      <pos>0.955 0.0125</pos>
      <size>0.033 0.033</size>
      <incharge>./battery/incharge.svg</incharge>
      <full>./battery/full.svg</full>
      <at75>./battery/75.svg</at75>
      <at50>./battery/50.svg</at50>
      <at25>./battery/25.svg</at25>
      <empty>./battery/empty.svg</empty>
      <color>FFFFFFA0</color>
      </batteryIndicator>
      <batteryIndicator name="batteryIndicator" tinyScreen="true">
      <pos>0.915 0.013</pos>
      <size>0.07 0.07</size>
      </batteryIndicator>
    </view>

<!---------------------------------------------------------------------->
<!-------------------------------- MENU -------------------------------->
<!---------------------------------------------------------------------->

<view name="menu">
<menuText name="menutitle">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<color>00FF00</color>
<fontSize>0.029</fontSize>
</menuText>

<menuText name="menufooter">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<fontSize>0.02</fontSize>
</menuText>

<menuText name="menutext">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<selectorGradientType>horizontal</selectorGradientType>
<fontSize>0.025</fontSize>
<color>ffffff</color>
</menuText>

<menuTextSmall name="menutextsmall">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<color>3366ff</color>
<fontSize>0.03</fontSize>
</menuTextSmall>

<menuBackground name="menubg">
<color>000000B7</color>
<cornerSize>32 32</cornerSize>
<path>./art/filter.png</path>
</menuBackground>

<menuIcons name="menuicons">
<iconKodi>./icons/Kodi.png</iconKodi>
<iconSystem>./icons/System.png</iconSystem>
<iconUpdates>./icons/Updates.png</iconUpdates>
<iconGames>./icons/Games.png</iconGames>
<iconControllers>./icons/Controllers.png</iconControllers>
<iconUI>./icons/UI.png</iconUI>
<iconSound>./icons/Sound.png</iconSound>
<iconNetwork>./icons/Network.png</iconNetwork>
<iconScraper>./icons/Scraper.png</iconScraper>
<iconAdvanced>./icons/Advanced.png</iconAdvanced>
<iconQuit>./icons/Quit.png</iconQuit>
<iconRestart>./icons/Restart.png</iconRestart>
<iconShutdown>./icons/Shutdown.png</iconShutdown>
<iconFastShutdown>./icons/Fastshutdown.png</iconFastShutdown>
<iconRetroachievements>./icons/Contest.png</iconRetroachievements>
</menuIcons>
<menuTextEdit name="menutextedit">
<inactive>./textinput_ninepatch.png</inactive>
<active>./textinput_ninepatch_active.png</active>
</menuTextEdit>
</view>

<!---------------------------------------------------------------------->
<!-------------------------- OPÇÕES DO MENU ---------------------------->
<!---------------------------------------------------------------------->

<subset name="Main Menu" displayName="Opções de Main Menu">
