<at50>./ARTES/BATTERY/50.svg</at50>
<at25>./ARTES/BATTERY/25.svg</at25>
<empty>./ARTES/BATTERY/empty.svg</empty>
<color>FFFFFFA0</color>
</batteryIndicator>
<batteryIndicator name="batteryIndicator" tinyScreen="true">
<pos>0.915 0.013</pos>
<size>0.07 0.07</size>
</batteryIndicator>
</view>

