<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<customView name="gamelist Gamecarousel Capa2d+Fanart+Video Windows-PC" inherits="gamecarousel">

<!----------------------------------------------------------->
<!------------------------ CARROUSEL ------------------------>
<!----------------------------------------------------------->

<gamecarousel name="gamecarousel">
<zIndex>999</zIndex>	      
<type>vertical</type>
<pos>0.353 0.25</pos>
<size>1 0.66</size>
<logoScale>1.45</logoScale>
<logoSize>0.125 0.250</logoSize>
<color>00000000</color>
<maxLogoCount>5</maxLogoCount>
<logoAlignment>center</logoAlignment>   
<imageSource>marquee</imageSource>
</gamecarousel> 

<!----------------------------------------------------------->
<!------------------------ HELPSYSTEM ----------------------->
<!----------------------------------------------------------->

<helpsystem name="help">
<pos>0 0.97</pos>    
</helpsystem>

<!----------------------------------------------------------->
<!---------------------- ARTES SISTEMA ---------------------->
<!----------------------------------------------------------->

<image name="pointer" extra="true">
<visible>false</visible>
</image>

<image name="background" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<zIndex>2</zIndex>
<path>./ARTES/ARTES GAMELIST/bg-game-right.png</path>
</image>

<image name="background2" extra="true">
<visible>false</visible>
</image>

<image name="logo">
<visible>false</visible>
</image>

<image name="logo2" extra="true">
<pos>0.852 0.1</pos>
<origin>0.5 0.5</origin>
<maxSize>0.22 0.18</maxSize>
<zIndex>21</zIndex>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
</image>

<!----------------------------------------------------------->
<!----------------------- ARTES EXTRAS ---------------------->
<!----------------------------------------------------------->

<image name="fundo_black" extra="true">
<visible>false</visible>
</image>

<image name="moldura_video_gamelist" extra="true">
<visible>false</visible>
</image>

<image name="caratula" extra="true">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<zIndex>2</zIndex>
<path>./ARTES/ARTES ROLETA/caratula.png</path>
<storyboard event="open">
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1800" duration="500" mode="linear"/>
</storyboard>  
<storyboard event="activateNext">
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1800" duration="500" mode="linear"/>
</storyboard>  
<storyboard event="activatePrev">
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1800" duration="500" mode="linear"/>
</storyboard>  
</image>

<!----------------------------------------------------------->
<!--------------------- ARTES GAMELIST ---------------------->
<!----------------------------------------------------------->

<image name="md_fanart" extra="true">
<pos>0.5 0.5</pos>
<origin>0.50 0.50</origin>
<maxSize>1 1</maxSize>
<zIndex>1</zIndex>
<storyboard event="open">
<animation property="scale" from="0.95" to="1" begin="0" duration="500" mode="linear"/>
</storyboard> 
<storyboard event="activateNext">
<animation property="scale" from="1" to="1.05" begin="0" duration="500" mode="linear"/>
</storyboard>  
<storyboard event="activatePrev">
<animation property="scale" from="1" to="0.95" begin="0" duration="500" mode="linear"/>
</storyboard>  
</image>

<image name="md_thumbnail" extra="true">
<pos>0.30 0.77</pos>
<origin>0.5 0.5</origin>
<maxSize>0.25 0.30</maxSize>
<zIndex>13</zIndex>
<storyboard>
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="linear"/>
<animation property="rotation" from="-360" begin="1000" duration="1000" mode="linear"/>
<animation property="scale" from="0" to="1" begin="1000" duration="1000" mode="linear"/>
</storyboard>  
</image>

<image name="md_cartridge">
<visible>false</visible>
</image>

<video name="md_video">
<pos>0.13 0.82</pos>
<origin>0.5 0.5</origin>
<effect>none</effect>
<size>0.20 0.20</size>
<delay>1.5</delay>
<zIndex>15</zIndex>
</video>

<text name="md_name">
<pos>0.241 0.92</pos>
<glowColor>000000</glowColor>
<glowSize>1</glowSize>
<storyboard>
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1800" duration="500" mode="linear"/>
</storyboard>  
</text>

<!----------------------------------------------------------->
<!-------------------------- FALSES ------------------------->
<!----------------------------------------------------------->

<text name=" md_lbl_players,md_lbl_publisher,md_publisher,md_lbl_developer,md_developer,logoText,md_developer,md_lbl_releasedate,md_releasedate,md_lbl_rating,md_lbl_genre,md_genre,md_description,md_lbl_playcount,md_lbl_lastplayed, md_lbl_gametime,md_lbl_playcount,md_lbl_lastplayed,md_lbl_gametime,md_playcount,md_lastplayed,md_gametime,md_players">
<visible>false</visible>
</text> 

<image name="md_marquee" extra="true">
<visible>false</visible>
</image>

</customView>
 
</theme>
