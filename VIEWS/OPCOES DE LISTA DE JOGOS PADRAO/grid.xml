<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<view name="grid">

<!----------------------------------------------------------->
<!------------------------ IMAGEGRID ------------------------>
<!----------------------------------------------------------->
  
<imagegrid name="gamegrid">
<pos>-0.0 0.645</pos>
<size>1.00 0.320</size>
<scrollDirection>horizontal</scrollDirection>
<autoLayout>5 1</autoLayout>
<autoLayoutSelectedZoom>1.4</autoLayoutSelectedZoom>
<padding>0 0 0 0</padding>
<margin>0 0</margin>
<color>00000000</color>
<centerSelection>true</centerSelection>
<reflexion>0</reflexion>
<imageSource>marquee</imageSource>
<scrollLoop>true</scrollLoop>
<zIndex>900</zIndex>
</imagegrid>
	
<gridtile name="default">
<padding>64 16</padding>
<backgroundCenterColor>FFFFFF00</backgroundCenterColor>
<backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
<imageSizeMode>maxSize</imageSizeMode>
<imageColor>FFFFFF</imageColor>
<reflexion>0 0.0</reflexion>
</gridtile>
	
<gridtile name="selected">
<backgroundCenterColor>FFFFFF00</backgroundCenterColor>
<backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
<padding>64 16</padding>
</gridtile>
	
<text name="gridtile">
<visible>false</visible>
<color>80808080</color>
<fontSize>0.016</fontSize>
<size>1 0</size>
</text>
	
<text name="gridtile:selected">
<color>FFFFFF00</color>
<fontSize>0.035</fontSize>
<size>1 0</size>
</text>
	
<ninepatch name="gridtile.background:selected">
<animateColorTime>0</animateColorTime>
</ninepatch>
	
<gridtile name="default">
<size>0.22875 0.33</size>
<visible>false</visible>
<backgroundColor>00000000</backgroundColor>
</gridtile>

<!----------------------------------------------------------->
<!------------------------ HELPSYSTEM ----------------------->
<!----------------------------------------------------------->

<helpsystem name="help">
<pos>0 0.97</pos>    
</helpsystem>
	
<!----------------------------------------------------------->
<!---------------------- ARTES SISTEMA ---------------------->
<!----------------------------------------------------------->

<image name="logo">
<pos>0.50 0.10</pos>
<origin>0.5 0.5</origin>
<maxSize>0.30 0.30</maxSize>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>	 
<zIndex>400</zIndex>
</image>
	
<image name="background" extra="true">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<path>./ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.jpg</path>	 
<color>363636</color>
<zIndex>1</zIndex>
<storyboard event="open">
<animation property="scale" begin="0" from="0.95" to="1" duration="600" mode="linear"/>
</storyboard>   
<storyboard event="activateNext">
<animation property="scale" begin="0" from="0.95" to="1" duration="600" mode="linear"/>
</storyboard>    
<storyboard event="activatePrev">
<animation property="scale" begin="0" from="1.05" to="1" duration="600" mode="linear"/>
</storyboard> 
</image>

<!----------------------------------------------------------->
<!----------------------- ARTES FIXAS ----------------------->
<!----------------------------------------------------------->

<image name="moldura_wheel" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./ARTES/MOLDURA MENU PRINCIPAL/Moldura gamelist Horizontal Grid.png</path>
<zIndex>15</zIndex>          
</image>

<image name="moldura_fanart" extra="true">
<pos>0.7 0.4</pos>
<origin>0.5 0.5</origin>
<size>0.5 0.5</size>
<path>./ARTES/ARTES GAMELIST/basic.png</path>
<zIndex>15</zIndex>   
</image>
	
<!----------------------------------------------------------->
<!--------------------- ARTES GAMELIST ---------------------->
<!----------------------------------------------------------->
   	
<video name="md_video">
<pos>0.7 0.4</pos>
<maxSize>0.5 0.5</maxSize>
<zIndex>2</zIndex>   
<storyboard event="open">
<animation property="scale" begin="0" from="0.95" to="1" duration="600" mode="linear"/>
</storyboard>   
<storyboard event="activateNext">
<animation property="scale" begin="0" from="0.95" to="1" duration="600" mode="linear"/>
</storyboard>    
<storyboard event="activatePrev">
<animation property="scale" begin="0" from="0.95" to="1" duration="600" mode="linear"/>
</storyboard> 
</video> 

<image name="md_thumbnail">
<pos>0.2 0.38</pos>
<origin>0.5 0.5</origin>
<maxSize>0.30 0.50</maxSize>
<zIndex>8</zIndex> 
<storyboard event="open">
<animation property="x" begin="0" from="0.15" duration="1500" mode="linear"/>
</storyboard>   
<storyboard event="activateNext">
<animation property="x" begin="0" from="0.15" duration="1500" mode="linear"/>
</storyboard>    
<storyboard event="activatePrev">
<animation property="x" begin="0" from="0.25" duration="1500" mode="linear"/>
</storyboard>         
</image>  
	
