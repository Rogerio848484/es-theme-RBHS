<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1600" duration="500" mode="linear"/>
</storyboard>  
<storyboard event="activatePrev"> 
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1600" duration="500" mode="linear"/>
</storyboard> 
<storyboard event="activateNext"> 
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1600" duration="500" mode="linear"/>
</storyboard>  
</image>

<image name="logo">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<zIndex>12</zIndex>
<path>./ARTES/LOGOSGAMELIST/${system.theme}.png</path>
</image>

