<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<!---------------------------basic------------------------------------- -->

<!-- lista dos jogos -->
<view name="basic">	
    <textlist name="gamelist">
<!--  Tamanho da caixa das letras  -->		
     <size>0.230 0.715</size>
<!--  Fonte das letras  -->	
      <fontSize>0.020</fontSize>
<!--  Posicao das letras  -->		 
	<pos>0.015 0.218</pos>
<!--  Alinhamento das letras  -->		 
    <alignment>left</alignment> 
<!--  Espaco entre as palavras  -->	
	<lineSpacing>1.8</lineSpacing> 
<!--  Cor das letras  -->		 
	<zIndex>5</zIndex>	
</textlist>
 
<!--  Exibe menu de ajuda: Selecionar, voltar, etc...  -->	 
<helpsystem name="help">
<pos>0 0.965</pos>  
</helpsystem>
	 
<!-- Logo por Sistema, aproveita as Wheels dos sistemas -->	
<image name="logo">
<origin>0.5 0.5</origin> 
<pos>0.132 0.100</pos>
<maxSize>0.220 0.150</maxSize>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
<linearSmooth>true</linearSmooth>
<zIndex>30</zIndex>
</image>

<!-- Arte extra Fixa Gamelist-->		
<image name="arte-extra-fixa-gamelist" extra="true">
<origin>0 0</origin>
<pos>0 0</pos>
<maxSize>1 1</maxSize>
<path>./ARTES/ARTES GAMELIST/Basic Fundo.png</path>
<zIndex>2</zIndex> 
</image> 

<!-- Arte extra Fixa Gamelist-->		
<image name="background" extra="true">
<origin>0 0</origin>
<pos>0 0</pos>
<size>1 1</size>
<path>./ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.jpg</path>
<zIndex>1</zIndex> 
<color>A9A9A9</color>
</image> 
  
</view>

</theme>
