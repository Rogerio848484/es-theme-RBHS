<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>

<view name="system">

<!---------------------------------------------------------------------->
<!----------------------------- CAROUSEL  ------------------------------>
<!---------------------------------------------------------------------->

<carousel name="systemcarousel">
<zIndex>43</zIndex>	      
<type>vertical_wheel</type>
<pos>0.34 0</pos>
<size>1 1</size>
<origin>0 0</origin>
<logoSize>0.14 0.270</logoSize>
<logoScale>1.3</logoScale> 
<color>00000000</color>
<maxLogoCount>17</maxLogoCount>
<logoRotation>-12</logoRotation>
<logoRotationOrigin>2.50 0.5</logoRotationOrigin>
<logoAlignment>center</logoAlignment>       
</carousel>

<image name="logo">
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
</image>

<!---------------------------------------------------------------------->
<!---------------------------- HELP / INFO  ---------------------------->
<!---------------------------------------------------------------------->

<text name="systemInfo">
<origin>0.5 0.5</origin>
<pos ifSubset="Video Options:Aleatorio">0.18 0.56</pos>
<pos ifSubset="Video Options:Off">0.70 0.50</pos>
<pos ifSubset="Video Options:Sistemas">0.18 0.56</pos>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<glowColor>000000</glowColor>
<rotation ifSubset="Video Options:Aleatorio">-4.5</rotation> 
<rotation ifSubset="Video Options:Off">-35</rotation> 
<rotation ifSubset="Video Options:Sistemas">-4.5</rotation> 
<zIndex>6</zIndex>	  
<storyboard ifSubset="Video Options:Aleatorio">
<animation property="opacity" from="0" to="1" begin="2100" duration="100" mode="EaseOut"/>
<animation property="y" from="0.50" begin="2100" duration="400" mode="linear"/>
</storyboard>  
<storyboard ifSubset="Video Options:Off">
<animation property="opacity" from="0" to="1" begin="100" duration="100" mode="EaseOut"/>
<animation property="y" from="0.50" begin="0" duration="400" mode="linear"/>
</storyboard>  
<storyboard ifSubset="Video Options:Sistemas">
<animation property="opacity" from="0" to="1" begin="2100" duration="100" mode="EaseOut"/>
<animation property="y" from="0.50" begin="2100" duration="400" mode="linear"/>
</storyboard>  
</text>

<helpsystem name="help">
<pos>0 0.97</pos>    
<textColor>ffffff</textColor>
<iconColor>ffffff</iconColor>
</helpsystem>

<!---------------------------------------------------------------------->
<!--------------------------- ARTES DE SISTEMAS------------------------->
<!---------------------------------------------------------------------->

<image name="background" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./../../ARTES/BACKGROUND FANART 1/${system.theme}.png</path>
<path>./../../ARTES/BACKGROUND FANART 1/${system.theme}.jpg</path>
<path>./../../ARTES/BACKGROUND FANART 1/${system.theme}.webp</path>
<path>./../../ARTES/BACKGROUND FANART 1/${system.theme}.bmp</path>
<zIndex>1</zIndex>
<storyboard>
<animation property="scale" from="1" to="1.05" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<image name="pointer" extra="true">
<pos>0.94 0.405</pos>
<maxSize>0.2 0.2</maxSize>
<path>./../../ARTES/ARTES ROLETA/POINTER DIREITA/default.png</path>
<path>./../../ARTES/ARTES ROLETA/POINTER DIREITA/${system.theme}.png</path>
<zIndex>5</zIndex>
<storyboard repeat="forever">
<animation property="x" from="0.97" to="0.94" duration="100" autoreverse="true" begin="4000" repeat="1"/>
</storyboard>
</image>

<image name="lototype" extra="true">
<pos>0.50 0.11</pos>
<origin>0.5 0.5</origin>
<maxSize>0.250 0.20</maxSize>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.jpg</path>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.webp</path>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.bmp</path>
<zIndex>5</zIndex>
<storyboard>
<animation mode="easyIn" duration="2500" begin="1000" property="scale" repeat="forever" autoreverse="true" from="0.97" to="1"/>
</storyboard> 
</image>

<video name="background_video" extra="true">
<pos>0.17 0.76</pos>
<origin>0.5 0.5</origin>
<maxSize>0.30 0.30</maxSize>
<path>./../../VIDEOS/${system.theme}.mp4</path>
<path>./../../VIDEOS/${system.theme}.flv</path>
<path>./../../VIDEOS/${system.theme}.avi</path>
<delay>2</delay>
<zIndex>4</zIndex>
<storyboard>
<animation property="scale" from="0.8" to="1" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</video>

<!---------------------------------------------------------------------->
<!--------------------------- ARTES FIXAS  ----------------------------->
<!---------------------------------------------------------------------->

<image name="Sombra" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./../../ARTES/ARTES ROLETA/SOMBRA.png</path>
<zIndex>3</zIndex>
</image>

<image name="caratula" extra="true">
<visible ifSubset="Video Options:Aleatorio">true</visible>
<visible ifSubset="Video Options:Off">false</visible>
<visible ifSubset="Video Options:Sistemas">true</visible>
<pos>0 0</pos>
<size>1 1</size>
<path>./../../ARTES/ARTES ROLETA/caratula.png</path>
<zIndex>3</zIndex>
<storyboard>
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1800" duration="1000" mode="linear"/>
</storyboard>
</image>

</view>
 
</theme>
