<?xml version="1.0" encoding="UTF-8"?>

<theme>

<formatVersion>7</formatVersion>

<view name="system">

<!---------------------------------------------------------------------->
<!-------------------------------- CAROUSEL ---------------------------->
<!---------------------------------------------------------------------->

<carousel name="systemcarousel">
<type>grid</type>
<pos ifSubset="Wheel Options:Classic">0 0.28001</pos>
<pos ifSubset="Wheel Options:Clean">0 0.286</pos>
<pos ifSubset="Wheel Options:Espiral">0 0.28</pos>
<pos ifSubset="Wheel Options:Rectangle">0 0.28</pos>
<pos ifSubset="Wheel Options:Silver">0 0.2801</pos>
<pos ifSubset="Wheel Options:Circular">0 0.275</pos>
<size>1 1</size>
<zIndex>50</zIndex>         
<logoScale ifSubset="Wheel Options:Classic">1.30</logoScale> 
<logoScale ifSubset="Wheel Options:Clean">1.60</logoScale> 
<logoScale ifSubset="Wheel Options:Espiral">1.30</logoScale> 
<logoScale ifSubset="Wheel Options:Rectangle">1.30</logoScale> 
<logoScale ifSubset="Wheel Options:Silver">1.2</logoScale> 
<logoScale ifSubset="Wheel Options:Circular">1.30</logoScale> 
<logoSize ifSubset="Wheel Options:Classic">0.125 0.25</logoSize>
<logoSize ifSubset="Wheel Options:Clean">0.15 0.30</logoSize>
<logoSize ifSubset="Wheel Options:Espiral">0.125 0.25</logoSize>
<logoSize ifSubset="Wheel Options:Rectangle">0.17 0.30</logoSize>
<logoSize ifSubset="Wheel Options:Silver">0.18 0.30</logoSize>
<logoSize ifSubset="Wheel Options:Circular">0.13 0.30</logoSize>
<color>00000000</color>
<logoAlignment>center</logoAlignment>
<maxLogoCount ifSubset="Wheel Options:Classic">7</maxLogoCount>
<maxLogoCount ifSubset="Wheel Options:Clean">5</maxLogoCount>
<maxLogoCount ifSubset="Wheel Options:Espiral">7</maxLogoCount>
<maxLogoCount ifSubset="Wheel Options:Rectangle">5</maxLogoCount>
<maxLogoCount ifSubset="Wheel Options:Silver">5</maxLogoCount>
<maxLogoCount ifSubset="Wheel Options:Circular">7</maxLogoCount>
</carousel>

<image name="logo">
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
</image>

<!---------------------------------------------------------------------->
<!------------------------------ HELP / INFO --------------------------->
<!---------------------------------------------------------------------->

<text name="systemInfo">
<pos>0.16 0.199</pos>
<origin>0.5 0.5</origin>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<glowColor>000000</glowColor>
<rotation>-4.5</rotation> 
<zIndex>9</zIndex>	  
<storyboard>
<animation property="opacity" from="0" to="1" begin="100" duration="100" mode="EaseOut"/>
<animation property="y" from="0.14" begin="100" duration="400" mode="linear"/>
</storyboard>  
</text> 

<helpsystem name="help">
<pos>0 0.97</pos>    
<textColor>ffffff</textColor>
<iconColor>ffffff</iconColor>
</helpsystem>

<!---------------------------------------------------------------------->
<!-------------------------- ARTES DE SISTEMAS ------------------------->
<!---------------------------------------------------------------------->

<image name="background" extra="true">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<path>./../../ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.png</path>
<path>./../../ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.jpg</path>
<path>./../../ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.webp</path>
<path>./../../ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.bmp</path>
<zIndex>1</zIndex>
<storyboard>
<animation property="scale" from="1" to="1.05" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<video name="background_video" extra="true">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<delay>2</delay>
<path>./../../VIDEOS/${system.theme}.mp4</path>
