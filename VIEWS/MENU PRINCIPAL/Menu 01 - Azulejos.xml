<?xml version="1.0" encoding="UTF-8"?>

<theme>
<formatVersion>7</formatVersion>

<!---------------------------------------------------------------------->
<!------------------------------- SCREEN ------------------------------->
<!---------------------------------------------------------------------->

<view name="screen">
<text name="clock">
<fontSize>0.034</fontSize>
<color>ffffff</color>
<glowColor>000000</glowColor>
<pos>0.89 0.9545</pos>
<size>0.10 0.058</size>
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<verticalAlignment>right</verticalAlignment>
</text>
	
<controllerActivity name="controllerActivity">
<pos>0.01 0.010</pos>
<size>0.085 0.025</size>
<itemSpacing>0.003</itemSpacing>
<imagePath>./icons/gamepad.svg</imagePath>
<color>FFFFFF1A</color>
<activityColor>ff00001A</activityColor>
<hotkeyColor>ffffff1A</hotkeyColor>
</controllerActivity>

<batteryIndicator name="batteryIndicator">
<pos>0.955 0.0125</pos>
<size>0.033 0.033</size>
<incharge>./battery/incharge.svg</incharge>
<full>./battery/full.svg</full>
<at75>./battery/75.svg</at75>
<at50>./battery/50.svg</at50>
<at25>./battery/25.svg</at25>
<empty>./battery/empty.svg</empty>
<color>FFFFFFA0</color>
</batteryIndicator>
<batteryIndicator name="batteryIndicator" tinyScreen="true">
<pos>0.915 0.013</pos>
<size>0.07 0.07</size>
</batteryIndicator>
</view>

<!---------------------------------------------------------------------->
<!-------------------------------- MENU -------------------------------->
<!---------------------------------------------------------------------->

<view name="menu">
<menuText name="menutitle">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<color>00FF00</color>
<fontSize>0.029</fontSize>
</menuText>

<menuText name="menufooter">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<fontSize>0.02</fontSize>
</menuText>

<menuText name="menutext">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<selectorGradientType>horizontal</selectorGradientType>
<fontSize>0.025</fontSize>
<color>DCDCDC</color> 
</menuText>

<menuTextSmall name="menutextsmall">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<color>3366ff</color>
<fontSize>0.03</fontSize>
</menuTextSmall>

<menuBackground name="menubg">
<color>000000B7</color>
<cornerSize>32 32</cornerSize>
<path>./art/filter.png</path>
</menuBackground>

<menuIcons name="menuicons">
<iconKodi>./icons/Kodi.png</iconKodi>
<iconSystem>./icons/System.png</iconSystem>
<iconUpdates>./icons/Updates.png</iconUpdates>
<iconGames>./icons/Games.png</iconGames>
<iconControllers>./icons/Controllers.png</iconControllers>
<iconUI>./icons/UI.png</iconUI>
<iconSound>./icons/Sound.png</iconSound>
<iconNetwork>./icons/Network.png</iconNetwork>
<iconScraper>./icons/Scraper.png</iconScraper>
<iconAdvanced>./icons/Advanced.png</iconAdvanced>
<iconQuit>./icons/Quit.png</iconQuit>
<iconRestart>./icons/Restart.png</iconRestart>
<iconShutdown>./icons/Shutdown.png</iconShutdown>
<iconFastShutdown>./icons/Fastshutdown.png</iconFastShutdown>
<iconRetroachievements>./icons/Contest.png</iconRetroachievements>
</menuIcons>
<menuTextEdit name="menutextedit">
<inactive>./textinput_ninepatch.png</inactive>
<active>./textinput_ninepatch_active.png</active>
</menuTextEdit>
</view>

<!---------------------------------------------------------------------->
<!------------------------------- SYSTEM ------------------------------->
<!---------------------------------------------------------------------->

<view name="system">

<image name="background" extra="true">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<path>./ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.png</path>
<path>./ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.jpg</path>
<path>./ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.wepp</path>
<path>./ARTES/BACKGROUND VIDEOGAMES 1/${system.theme}.bmp</path>
<zIndex>1</zIndex>
<storyboard>
<animation property="scale" from="1" to="1.05" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<video name="background_video" extra="true">
<pos>0.5 0.5</pos>
<origin>0.5 0.5</origin>
<size>1 1</size>
<delay>2</delay>
<path>./VIDEOS/${system.theme}.mp4</path>
<path>./VIDEOS/${system.theme}.flv</path>
<path>./VIDEOS/${system.theme}.avi</path>
<zIndex>1</zIndex>
<storyboard>
<animation property="scale" from="0.9" to="1" begin="0" duration="600" mode="linear"/>
</storyboard>  
</video>

<image name="moldura" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./ARTES/MOLDURA MENU PRINCIPAL/black.png</path>
<zIndex>2</zIndex>
</image>

<image name="selector" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./ARTES/MOLDURA MENU PRINCIPAL/selector.png</path>
<zIndex>2</zIndex>
</image>

<image name="controle" extra="true">
<pos>0.87 0.438</pos>
<origin>0.5 0.5</origin>
<maxSize>0.2 0.2</maxSize>
<path>./ARTES/CONTROLES/${system.theme}.png</path>
<path>./ARTES/CONTROLES/${system.theme}.jpg</path>
<path>./ARTES/CONTROLES/${system.theme}.wepp</path>
<path>./ARTES/CONTROLES/${system.theme}.bmp</path>
<zIndex>3</zIndex>
<storyboard>
<animation property="x" from="1" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<image name="logotype2" extra="true">
<pos>0.90 0.15</pos>
<origin>0.5 0.5</origin>
<maxSize>0.2 0.2</maxSize>
<path>./ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.png</path>
<path>./ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.jpg</path>
<path>./ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.wepp</path>
<path>./ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.bmp</path>
<zIndex>3</zIndex>
<storyboard>
<animation property="y" from="0" begin="0" duration="1000" mode="linear"/>
<animation mode="easyIn" duration="2500" begin="1000" property="scale" repeat="forever" autoreverse="true" from="1.00" to="1.02"/>
</storyboard>  
</image>

<image name="char" extra="true">
<pos>0.12 0.438</pos>
<origin>0.5 0.5</origin>
<maxSize>0.35 0.35</maxSize>
<path>./ARTES/CHAR/${system.theme}.png</path>
<path>./ARTES/CHAR/${system.theme}.jpg</path>
<path>./ARTES/CHAR/${system.theme}.wepp</path>
<path>./ARTES/CHAR/${system.theme}.bmp</path>
<zIndex>3</zIndex>
<storyboard>
<animation property="x" from="0" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<image name="lototype" extra="true">
<pos>0.16 0.085</pos>
<origin>0.5 0.5</origin>
<maxSize>0.2 0.2</maxSize>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.jpg</path>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.wepp</path>
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.bmp</path>
<zIndex>3</zIndex>
</image>

<carousel name="systemcarousel">
<type>grid</type>
<pos>0 0.29</pos>
<size>1 1</size>
<zIndex>4</zIndex>         
<logoScale>1.5</logoScale> 
<logoSize>0.125 0.25</logoSize>
<color>00000000</color>
<logoAlignment>center</logoAlignment>
<maxLogoCount>5</maxLogoCount>
</carousel>

<image name="logo">
<path>./ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
</image>

<text name="systemInfo">
<pos>0.16 0.199</pos>
<origin>0.5 0.5</origin>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<glowColor>000000</glowColor>
<rotation>-4.5</rotation> 
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<fontSize>0.034</fontSize>
<zIndex>5</zIndex>	  
<storyboard>
<animation property="opacity" from="0" to="1" begin="100" duration="100" mode="EaseOut"/>
<animation property="y" from="0.14" begin="100" duration="400" mode="linear"/>
</storyboard>  
</text> 

<helpsystem name="help">
<fontPath>./fonts/Digital-Serial-Bold.ttf</fontPath>
<fontSize>0.034</fontSize>
<pos>0 0.965</pos>    
<textColor>ffffff</textColor>
<iconColor>ffffff</iconColor>
</helpsystem>

</view>
 
</theme>
