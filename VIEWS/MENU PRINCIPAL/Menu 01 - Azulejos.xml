<path>./../../VIDEOS/${system.theme}.avi</path>
<zIndex>2</zIndex>
<storyboard>
<animation property="scale" from="0.9" to="1" begin="0" duration="600" mode="linear"/>
</storyboard>  
</video>

<image name="controle" extra="true">
<pos>0.87 0.438</pos>
<origin>0.5 0.5</origin>
<maxSize>0.2 0.2</maxSize>
<path>./../../ARTES/CONTROLES/${system.theme}.png</path>
<path>./../../ARTES/CONTROLES/${system.theme}.jpg</path>
<path>./../../ARTES/CONTROLES/${system.theme}.wepp</path>
<path>./../../ARTES/CONTROLES/${system.theme}.bmp</path>
<zIndex>5</zIndex>
<storyboard>
<animation property="x" from="1" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<image name="logotype2" extra="true">
<pos>0.90 0.15</pos>
<origin>0.5 0.5</origin>
<maxSize>0.2 0.2</maxSize>
<path>./../../ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.png</path>
<path>./../../ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.jpg</path>
<path>./../../ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.webp</path>
<path>./../../ARTES/LOGOS/WHEEL CIRCULAR/${system.theme}.bmp</path>
<zIndex>6</zIndex>
<storyboard>
<animation property="y" from="0" begin="0" duration="1000" mode="linear"/>
<animation mode="easyIn" duration="2500" begin="1000" property="scale" repeat="forever" autoreverse="true" from="1.00" to="1.02"/>
</storyboard>  
</image>

<image name="char" extra="true">
<pos>0.12 0.438</pos>
<origin>0.5 0.5</origin>
<maxSize>0.35 0.35</maxSize>
<path>./../../ARTES/CHAR/${system.theme}.png</path>
<path>./../../ARTES/CHAR/${system.theme}.jpg</path>
<path>./../../ARTES/CHAR/${system.theme}.webp</path>
<path>./../../ARTES/CHAR/${system.theme}.bmp</path>
<zIndex>7</zIndex>
<storyboard>
<animation property="x" from="0" begin="0" duration="1000" mode="linear"/>
</storyboard>  
</image>

<image name="lototype" extra="true">
<pos>0.16 0.085</pos>
<origin>0.5 0.5</origin>
<maxSize>0.2 0.2</maxSize>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.png</path>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.jpg</path>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.webp</path>
<path>./../../ARTES/LOGOS/LOGOCLEAN/${system.theme}.bmp</path>
<zIndex>8</zIndex>
</image>

<!---------------------------------------------------------------------->
