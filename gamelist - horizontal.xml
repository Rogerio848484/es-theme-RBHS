<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<customView name="Gamelist Horizontal 05 logos" inherits="gamecarousel">

<gamecarousel name="gamecarousel">
<zIndex>10</zIndex>	      
<type>horizontal</type>
<pos>0 0.30</pos>
<size>1 1</size>
<logoScale>1.4</logoScale>
<logoSize>0.150 0.260</logoSize>
<color>00000000</color>
<maxLogoCount>5</maxLogoCount>
<logoAlignment>center</logoAlignment>   
<imageSource>marquee</imageSource>
</gamecarousel> 


<image name="pointer" extra="true">
<visible>false</visible>
</image>

<image name="background" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<zIndex>1</zIndex>
<path>./ARTES/BACKGROUNDGAMELIST/${system.theme}.jpg</path>
</image>

<image name="background2" extra="true">
<visible>false</visible>
</image>

<image name="FUNDO_BLACK" extra="true">
<visible>false</visible>
</image>

<image name="MOLDURA_VIDEO_GAMELIST" extra="true">
<path>./ARTES/MOLDURAS VIDEO GAMELIST/${system.theme}.png</path>
<pos>0 -0.165</pos>
<size>1 1</size>
<storyboard event="open"> 
<animation property="opacity" begin="0" from="0" to="0" duration="500" mode="linear"/>
<animation property="opacity" begin="1000" from="0" to="1" duration="1000" mode="linear"/>
</storyboard>
<storyboard event="activateNext"> 
<animation property="opacity" begin="0" from="0" to="0" duration="500" mode="linear"/>
<animation property="opacity" begin="1000" from="0" to="1" duration="1000" mode="linear"/>
</storyboard>
<storyboard event="activatePrev"> 
<animation property="opacity" begin="0" from="0" to="0" duration="500" mode="linear"/>
<animation property="opacity" begin="1000" from="0" to="1" duration="1000" mode="linear"/>
</storyboard>
</image>


<image name="logo">
<visible>false</visible>
</image>

<image name="md_fanart" extra="true">
<pos>0.5 0.5</pos>
<origin>0.50 0.50</origin>
<size>1 1</size>
<zIndex>1</zIndex>
</image>

<image name="md_thumbnail" extra="true">
<pos>0.74 0.40</pos>
<origin>0.5 0.5</origin>
<maxSize>0.65 .65</maxSize>
<zIndex>13</zIndex>
<storyboard>
<animation property="scale" begin="0" from="0" to="1" duration="1500" mode="linear"/>
<animation property="opacity" begin="0" from="0" to="1" duration="1500" mode="linear"/>
</storyboard>
</image>

<video name="md_video">
<pos>0.2805 0.4</pos>
<origin>0.5 0.5</origin>
<effect>none</effect>
<size>0.40 .55</size>
<delay>1</delay>
<zIndex>15</zIndex>
<storyboard>
<animation property="scale" begin="0" from="0" to="1" duration="1000" mode="linear"/>
<animation property="rotation" begin="0" from="360" duration="1000" mode="linear"/>
</storyboard>
</video>

<image name="md_marquee">
<pos>0.28 0.12</pos>
<origin>0.5 0.5</origin>
<maxSize>0.22 0.36</maxSize>
<zIndex>20</zIndex>
<storyboard>
<animation property="scale" begin="0" from="0" to="1" duration="1200" mode="linear"/>
</storyboard>
</image>

</customView>
 
 </theme>
